{
	"name": "svelte-stream",
	"description": "Streaming audio, video, and other data from the browser to the server without WebSockets or WebRTC.",
	"author": "Jacob Lin <jacob@csie.cool>",
	"keywords": [
		"svelte",
		"stream",
		"audio",
		"video",
		"media",
		"streaming"
	],
	"version": "0.1.0",
	"license": "MIT",
	"homepage": "https://github.com/JacobLinCool/svelte-stream",
	"repository": {
		"type": "git",
		"url": "https://github.com/JacobLinCool/svelte-stream"
	},
	"bugs": {
		"url": "https://github.com/JacobLinCool/svelte-stream/issues"
	},
	"type": "module",
	"packageManager": "pnpm@9.11.0",
	"scripts": {
		"prepare": "husky",
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"changeset": "changeset",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./client": {
			"types": "./dist/client.d.ts",
			"svelte": "./dist/client.js",
			"import": "./dist/client.js",
			"default": "./dist/client.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"dependencies": {
		"debug": "^4.3.7"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.8",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/kit": "^2.6.1",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/debug": "^4.1.12",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.7.4",
		"eslint": "^9.11.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"globals": "^15.9.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.2.7",
		"publint": "^0.2.11",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.4",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.8.0",
		"vite": "^5.4.8"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
